<!DOCTYPE html>
<html>

<head>
    <title>Payment Success</title>
    <style>
        /* Apply default font family and size */
        body {
            font-family: Arial, sans-serif;
            font-size: 16px;
        }

        /* Center the content in the page */
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        /* Set the background color */
        body {
            background-color: #f5f5f5;
        }

        /* Style the header tags */
        h1 {
            font-size: 32px;
            margin-bottom: 16px;
            align-self: center;
        }

        h2 {
            font-size: 24px;
            margin-top: 32px;
            margin-bottom: 16px;
        }

        h3 {
            font-size: 20px;
            margin-top: 32px;
            margin-bottom: 16px;
        }

        h4 {
            font-size: 16px;
            margin-top: 32px;
            margin-bottom: 16px;
        }

        /* Style the transaction details */
        .transaction {
            border: 1px solid #ddd;
            padding: 16px;
            margin-bottom: 16px;
        }

        .transaction p {
            margin-bottom: 8px;
        }

        .transaction ul {
            margin-top: 8px;
            margin-bottom: 0;
        }

        .transaction li {
            margin-bottom: 4px;
        }

        /* Style the back button */
        button {
            margin-top: 32px;
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #0069d9;
        }

        button a {
            color: #fff;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div>
        <h1>Payment Successful!</h1>
        <h2>Payment Details:</h2>
        <h3>Payment Successful</h3>

        <p>Payment ID: <%= paymentId %>
        </p>

        <h4>Transaction History</h4>
        <% transactions.forEach(function(transaction) { %>
            <div class="transaction">
                <p><strong>Description:</strong>
                    <%= transaction.description %>
                </p>
                <p><strong>Amount:</strong>
                    <%= transaction.amount.total %>
                        <%= transaction.amount.currency %>
                </p>
                <ul>
                    <% transaction.item_list.items.forEach(function(item) { %>
                        <li>
                            <%= item.name %> (SKU: <%= item.sku %>)
                                    <%= item.quantity %> x <%= item.price %>
                                            <%= item.currency %> = <%= item.quantity * item.price %>
                                                    <%= item.currency %>
                        </li>
                        <% }) %>
                </ul>
            </div>
            <% }) %>
                <button> <a href="http://localhost:3000/cart">Back to Cart</a></button>

    </div>

</body>

</html>